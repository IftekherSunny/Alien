<?php

$dir = __DIR__.'/../../config';

if (! file_exists($dir))  mkdir($dir, 0777, true);

if(file_exists($dir.'/alien.php'))
{
	echo 'Config file already exists.';
}
else {
	copy(__DIR__.'/config.php',__DIR__.'/../../config/alien.php');

	echo 'Config file has been published successfully.';
}

